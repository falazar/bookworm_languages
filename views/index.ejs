<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav class="nav">
            <a href="/">Home</a>
            <a href="/hello">Hello</a>
        </nav>
        
        <div class="welcome">
            <h1><%= title %></h1>
            <p><%= message %></p>
        </div>
        
        <!-- Upload Section -->
        <div class="upload-section">
            <h2>üìÅ Upload New Book</h2>
            <form id="uploadForm" enctype="multipart/form-data">
                <div class="upload-container">
                    <input type="file" id="epubFile" name="epubFile" accept=".epub" required>
                    <button type="submit" class="upload-btn">Upload EPUB</button>
                </div>
                <div id="uploadStatus" class="upload-status"></div>
            </form>
        </div>
        
        <!-- Books List Section -->
        <div class="books-section">
            <h2>üìö Your Books</h2>
            <% if (books && books.length > 0) { %>
                <div class="books-grid">
                    <% books.forEach(function(book) { %>
                        <div class="book-card" onclick="window.location.href='/translate/<%= book.filename %>'">
                            <div class="book-icon">üìñ</div>
                            <div class="book-info">
                                <h3 class="book-title"><%= book.displayName %></h3>
                                <p class="book-meta">
                                    Size: <%= book.sizeFormatted %><br>
                                    Uploaded: <%= book.uploadDate.toLocaleDateString() %>
                                </p>
                            </div>
                            <div class="book-action">
                                <span class="translate-btn">Translate ‚Üí</span>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-books">
                    <p>No books uploaded yet. Upload your first EPUB file above!</p>
                </div>
            <% } %>
        </div>
    </div>
    
    <script>
        // Handle file upload
        document.getElementById('uploadForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            const fileInput = document.getElementById('epubFile');
            const statusDiv = document.getElementById('uploadStatus');
            
            if (!fileInput.files[0]) {
                statusDiv.innerHTML = '<p class="error">Please select a file first.</p>';
                return;
            }
            
            formData.append('epubFile', fileInput.files[0]);
            
            try {
                statusDiv.innerHTML = '<p class="loading">Uploading...</p>';
                
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    statusDiv.innerHTML = '<p class="success">File uploaded successfully! Refreshing page...</p>';
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    statusDiv.innerHTML = '<p class="error">Upload failed: ' + result.error + '</p>';
                }
            } catch (error) {
                statusDiv.innerHTML = '<p class="error">Upload failed: ' + error.message + '</p>';
            }
        });
    </script>
</body>
</html>
